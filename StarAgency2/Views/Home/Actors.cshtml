<!DOCTYPE html>
<html>
<head>
    <style>
        div.gallery {
            margin: 5px;
            border: 1px solid #ccc;
            float: left;
            width: 180px;
        }

        div.gallery:hover {
            border: 1px solid #777;
        }

        div.gallery img {
            width: 100%;
            height: auto;
        }

        div.desc {
            padding: 15px;
            text-align: center;
        }
    </style>

</head>
<body>
@using (Html.BeginForm("Search", "Actor", FormMethod.Get))
{
    @Html.TextBox("name")<input type="submit" value="Search"/>
}
                        
<table rowspan="2" cellpadding="0" cellspacing="0" style="width: 545px; height: 200px">

    @foreach (var item in Model)
    {






        <td>
            <div class="gallery" style="width: 100%; height: 100%; text-align: center; vertical-align: middle">
                <a target="_blank" href="@Url.Action("Details/" + @Html.Encode(item.Id), "Actor")">
                    <img src="@Html.Encode(item.Name)1.jpg" alt="@Html.Encode(item.Name)" width="600" height="400">
                </a>
                <div class="desc">@Html.Encode(item.Name)</div>
            </div>

                                   

        </td>





    }
                               

</table>



                      

</body>
</html>
